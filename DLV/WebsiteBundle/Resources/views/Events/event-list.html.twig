{% extends "::base.html.twig" %}

            {% block content %}
            {% for event in events %}
                
                <article>
                    <h2><a href="{{ event.link }}">{{ event.name }}</a></h2>
                    <p>{{ event.description }}</p>
                    <p>{{ event.date }} {{ lang.time }} {{ event.time }} {{ lang.location }} <strong>{{ event.location }}</strong></p>
                    <p><a href="{{ event.link }}">{{ lang.more }}</a></p>
                </article>
            {% endfor %}
            {% endblock %}